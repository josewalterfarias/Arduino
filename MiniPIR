#define MINIPIR 8
#define LEDVER 12

int valorSensor = 0;

void setup() {
 pinMode (MINIPIR, INPUT); 
 digitalWrite (MINIPIR,LOW);
 pinMode (LEDVER, OUTPUT);
 Serial.begin (115200);

}

void loop() {
 valorSensor = digitalRead (MINIPIR);
 Serial.println (valorSensor);

 if (valorSensor ==1){
 Serial.println ("sim");
 digitalWrite (LEDVER,0); 
 }
 else{
 Serial.println ("n√£o");
 digitalWrite (LEDVER,1); 
 }

}
